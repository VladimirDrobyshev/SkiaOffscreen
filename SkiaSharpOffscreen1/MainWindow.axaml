<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SkiaSharpOffscreen.MainWindow"
        Title="SkiaSharpOffscreen1">
    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding }" />
        <StackPanel Orientation="Vertical">
            <Button Click="RenderSkia">Skia</Button>
            <Button Click="RenderOpenGl">OpenGl</Button>
            <Button Click="RenderVulkan">Vulkan</Button>
            <TextBlock Text="{Binding Co}"/>
        </StackPanel>
    </StackPanel>
</Window>
